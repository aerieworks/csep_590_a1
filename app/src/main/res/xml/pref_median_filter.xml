<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/pref_key_apply_median_filter"
        android:title="@string/pref_title_apply_median_filter"
        android:summary="@string/pref_description_apply_median_filter"
        android:defaultValue="@bool/default_apply_median_filter" />

    <EditTextPreference
        android:key="@string/pref_key_median_filter_window_size"
        android:title="@string/pref_title_median_filter_window_size"
        android:defaultValue="@integer/default_median_filter_window_size"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />
</PreferenceScreen>