        android:key="@string/pref_key_apply_mean_shifter"
        android:title="@string/pref_title_apply_mean_shifter"
        android:summary="@string/pref_description_apply_mean_shifter"
        android:defaultValue="@bool/default_apply_mean_shifter" />

    <EditTextPreference
